<div class="page-header">
  <h1>
    <%= @user.username %>
    <a href="/photos/new" class="btn btn-lg btn-success">New Photo</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Caption</th>
        <th>Image</th>
      </tr>

      <% @photos.each do |photo| %>
      <tr>
        <td><%= photo.caption %></td>
        <td><img src="<%= photo.image %>" width="400"></td>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
